# importing packages
library(tidyverse)
library(bigrquery)

# bigrquery setup
# authorize bigquery below if not authorized
# bq_auth(email = "faiz.essa@gmail.com")
billing <- "whatsappgdelt"

# INDIA 

# Query for "root codes" - protest, assault, fight, use unconventional mass violence
sql <- 
  "SELECT ActionGeo_ADM1Code, EventRootCode, SQLDATE, COUNT(*) 
FROM `gdelt-bq.gdeltv2.events` 
WHERE (EventRootCode = '14'
OR EventRootCode = '18' 
OR EventRootCode = '19'
OR EventRootCode = '20')
AND (ActionGeo_CountryCode = 'IN')
AND Year >= 2015
GROUP BY ActionGeo_ADM1Code, EventRootCode, SQLDATE
"

# data import
gdelt.data <- bq_project_query(billing, sql)
gdelt.table <- bq_table_download(gdelt.data)

# saving raw data
write_rds(gdelt.table, "Data/GDELT/RawGDELT_IndiaStates.rds")

# query for demonstrations and violent protests
sql2 <- 
  "SELECT ActionGeo_ADM1Code, EventCode, SQLDATE, COUNT(*) 
FROM  `gdelt-bq.gdeltv2.events`
WHERE (EventCode = '141'
OR EventCode = '1411'
OR EventCode = '1412'
OR EventCode = '1413'
OR EventCode = '1414'
OR EventCode = '145' 
OR EventCode = '1451'
OR EventCode = '1452'
OR EventCode = '1453'
OR EventCode = '1454')
AND (ActionGeo_CountryCode = 'IN')
AND Year >= 2015
GROUP BY ActionGeo_ADM1Code, EventCode, SQLDATE
"

# data import
gdelt.data.2 <- bq_project_query(billing, sql2)
gdelt.table.2 <- bq_table_download(gdelt.data.2)

# saving raw data
write_rds(gdelt.table.2, "Data/GDELT/RawGDELT_IndiaStates_2.rds")

# ACROSS COUNTRIES

# Query for "root codes" - protest, assault, fight, use unconventional mass violence
sql3 <- 
  "SELECT ActionGeo_CountryCode, EventRootCode, SQLDATE, COUNT(*) 
FROM `gdelt-bq.gdeltv2.events` 
WHERE (EventRootCode = '14'
OR EventRootCode = '18' 
OR EventRootCode = '19'
OR EventRootCode = '20')
AND Year >= 2015
GROUP BY ActionGeo_CountryCode, EventRootCode, SQLDATE
"

gdelt.data.3 <- bq_project_query(billing, sql3)
gdelt.table.3 <- bq_table_download(gdelt.data.3)

# saving raw data
write_rds(gdelt.table.3, "Data/GDELT/RawGDELT_CrossCountry.rds")

# query for demonstrations and violent protests
sql4 <- 
  "SELECT ActionGeo_CountryCode, EventCode, SQLDATE, COUNT(*) 
FROM  `gdelt-bq.gdeltv2.events`
WHERE (EventCode = '141'
OR EventCode = '1411'
OR EventCode = '1412'
OR EventCode = '1413'
OR EventCode = '1414'
OR EventCode = '145' 
OR EventCode = '1451'
OR EventCode = '1452'
OR EventCode = '1453'
OR EventCode = '1454')
AND Year >= 2015
GROUP BY ActionGeo_CountryCode, EventCode, SQLDATE
"

gdelt.data.4 <- bq_project_query(billing, sql4)
gdelt.table.4 <- bq_table_download(gdelt.data.4)

# saving raw data
write_rds(gdelt.table.4, "Data/GDELT/RawGDELT_CrossCountry_2.rds")

# clear data 
rm(list=ls())




